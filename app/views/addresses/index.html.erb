<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

<div class="container-address-index" data-controller="dropdown">

    <h1 class="my-addresses">My addresses</h1>
    <div class="green-line"></div>

    <div class="add-new-address-1" >
      <i class="material-symbols-outlined">add_circle</i>
      <%= link_to "Add a new address", new_address_path, style: "text-decoration: none;" %>
    </div>

    <% @addresses.each do|address| %>
      <div class="info-card">
        <div class="house-icon">
          <i class="material-symbols-outlined">apartment</i>
        </div>

        <div class="address-link">
          <a href="/addresses/<%=address.id%>" ><strong><%= address.name %></strong></a>
          <p><%= address.address %></p>
        </div>

        <div class="dropdown">
          <div class="dropdown-1">
            <span data-action="click->dropdown#toggle" class="material-symbols-outlined" type="button" id="<%= address.id %>">more_vert</span>
          </div>

          <div class="dropdownmenu" id="menu-<%= address.id %>">
            <a class="dropdown-item" href="#">Share</a>
            <a class="dropdown-item" href="#">Edit</a>
            <a class="dropdown-item" href="#">Delete</a>
          </div>
        </div>
      </div>

      <%# <h3 class= see address>  <%= link_to "show address", address_path(address) %></h3>
    <% end %>

</div>
