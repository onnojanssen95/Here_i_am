<div class="container-show-address">
  <div>
    <div class="address-show">
      <h2><strong><%= @address.address %></strong></h2>
    </div>

    <div data-controller="map"
      id="map"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
      data-map-markers-value="<%= @markers.to_json %>"
      style="width: 100%; height: 600px;"
      >
            <%# style="width: 360px; height: 760px; %>
    </div>

    <div class="other-info">
      <h2 class="each-info"><%= @address.name %></h2>
      <p class="each-info">Type of the building: <%= @address.kind_of_place %></p>
      <p><strong>Where in the building: </strong><%= @address.place_in_building %></p>
      <p><strong>Floor: </strong><%= @address.floor %></p>
      <p><strong>Elevator: </strong><%= @address.elevator %></p>
      <p><strong>Description</strong><%= @address.description %></p>
      <%= cl_image_tag @address.photo.key, height: 300, width: 400, crop: :fill %>
      <%#= link_to "My addresses", addresses_path %>
    </div>


    <%= link_to "Edit my address", edit_address_path %>




    <div class = "delete-button1">
        <%= link_to "Delete address", address_path(@address),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </div>



  </div>

</div>
